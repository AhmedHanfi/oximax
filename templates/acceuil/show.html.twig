{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
    <h1>Acceuil</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ acceuil.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ acceuil.Nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ acceuil.Prenom }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ acceuil.mail }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ acceuil.telephone }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ acceuil.Adress }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-warning" href="{{ path('app_acceuil_index') }}">Retour</a>

    <a class="btn btn-outline-success" href="{{ path('app_acceuil_edit', {'id': acceuil.id}) }}">Editer</a>

    {{ include('acceuil/_delete_form.html.twig') }}
{% endblock %}
