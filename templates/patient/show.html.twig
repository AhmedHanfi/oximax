{% extends 'base.html.twig' %}

{% block title %}Patient{% endblock %}

{% block body %}
    <h1>Patient</h1>
    <button onClick="print()">print</button>
    <table class="table" id="datatable">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>Date_naissance</th>
                <td>{{ patient.dateNaissance ? patient.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ patient.telephone }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ patient.Nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ patient.Prenom }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ patient.Genre }}</td>
            </tr>
            <tr>
                <th>Numidentite</th>
                <td>{{ patient.Numidentite }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ patient.Adress }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ patient.Mail }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ patient.EtatPatient }}</td>
            </tr>
            <tr>
                <th>Docteur</th>
                <td>
                    {% for docteurPatientLigne in patient.docteurPatientLignes %}
                        <div class="tag">{{ docteurPatientLigne.Docteur.nom }}</div> <br>
                    {% else %}
                        Aucun médecin n'est affecté.
                    {% endfor %}
                </td>
            </tr>
             
        </tbody>
    </table>

    <a class="btn btn-outline-warning" href="{{ path('app_patient_index') }}">Retour</a>

    <a class="btn btn-outline-success" href="{{ path('app_patient_edit', {'id': patient.id}) }}">Editer</a>

    {{ include('patient/_delete_form.html.twig') }}

            {% if is_granted('ROLE_DOCTOR') %}
				<iframe style="width: 100%; border: 1px black solid;" frameborder='1' height='620' src="http://192.168.216.100/">
			{% endif %}
    <script>
    function print(){
        window.print();
    }
  </script>
{% endblock %}
