{% extends 'base.html.twig' %}

{% block title %}Patients{% endblock %}

{% block body %}
    <h1>Patients</h1>
    <table class="table"  id="datatable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_naissance</th>
                <th>Telephone</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Genre</th>
                <th>Numidentite</th>
                <th>Adress</th>
                <th>Mail</th>
                <th>Docteur affecter</th>

                <th>Maladie(s) <br>
                    <small class="text-secondary">(Etat:<span class="px-2 mx-1 rounded bg-success"></span>"amélioration"/<span class="px-2 mx-1 rounded bg-danger"></span>"déterioration")</small>
                </th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.dateNaissance ? patient.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ patient.telephone }}</td>
                <td>{{ patient.Nom }}</td>
                <td>{{ patient.Prenom }}</td>
                <td>{{ patient.Genre }}</td>
                <td>{{ patient.Numidentite }}</td>
                <td>{{ patient.Adress }}</td>
                <td>{{ patient.Mail }}</td>
                <td>
                    {% for docteurPatientLigne in patient.docteurPatientLignes %}
                        <div class="tag">{{ docteurPatientLigne.Docteur.nom }}</div> <br>
                    {% else %}
                        Aucun médecin n'est affecté.
                    {% endfor %}
                </td>

                <td>
                    {% for diag in patient.Diagnostics %}
                        <a href="{{ path('app_diagnostic_show', {'id': diag.id }) }}" class="btn btn-sm {{ diag.etat=='amélioration'?'btn-success':'btn-danger' }} m-1">{{ diag.maladie }}</a>
                    {% endfor %}
                </td>


                <td>
                    <a class="btn btn-outline-primary" href="{{ path('app_patient_show', {'id': patient.id}) }}">Details</a>
                    <a class="btn btn-outline-success" href="{{ path('app_patient_edit', {'id': patient.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_patient_new') }}">Create new</a>
    
{% endblock %}
