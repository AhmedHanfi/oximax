{% extends 'base.html.twig' %}

{% block title %}Responsables{% endblock %}

{% block body %}
    <h1>Responsables</h1>

    <table class="table" id="datatable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>Adress</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for responsable in responsables %}
            <tr>
                <td>{{ responsable.id }}</td>
                <td>{{ responsable.Nom }}</td>
                <td>{{ responsable.Mail }}</td>
                <td>{{ responsable.Prenom }}</td>
                <td>{{ responsable.telephone }}</td>
                <td>{{ responsable.adress }}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('app_responsable_show', {'id': responsable.id}) }}">Details</a>
                    <a class="btn btn-outline-success" href="{{ path('app_responsable_edit', {'id': responsable.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_responsable_new') }}">Create new</a>
{% endblock %}
